<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center" >

        <Spinner
            android:id="@+id/spnnr_duration_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/lbl_duration_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spnnr_duration_hours"
            android:layout_alignLeft="@id/spnnr_duration_hours"
            android:text="hours" />
        
        <Spinner
            android:id="@+id/spnnr_duration_minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/spnnr_duration_hours"
            android:layout_alignBaseline="@id/spnnr_duration_hours"
            android:layout_marginLeft="5dp" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spnnr_duration_minutes"
            android:layout_alignLeft="@id/spnnr_duration_minutes"
            android:layout_alignBaseline="@id/lbl_duration_hours"
            android:text="minutes" />
    </RelativeLayout>
    <Button
        android:id="@+id/btn_duration_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:paddingLeft="90dp"
        android:paddingRight="90dp"
        android:text="@string/btn_duration_select" />
</LinearLayout>