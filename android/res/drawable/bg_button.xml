<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#3072b3"
                android:endColor="#599bdc"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#2a65a0" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#f4f4f4"
                android:endColor="#b0b0b0"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#b0b0b0" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>